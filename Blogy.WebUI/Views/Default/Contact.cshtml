
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                <div class="contact-info">

                    <div class="address mt-2">
                        <i class="icon-room"></i>
                        <h4 class="mb-2">Adres:</h4>
                        <p>Büyükdere Cad. No: 123<br> Levent, İstanbul 34394</p>
                    </div>

                    <div class="open-hours mt-4">
                        <i class="icon-clock-o"></i>
                        <h4 class="mb-2">Çalışma Saatleri:</h4>
                        <p>
                            Pazartesi - Cuma:<br>
                            09:00 - 18:00
                        </p>
                    </div>

                    <div class="email mt-4">
                        <i class="icon-envelope"></i>
                        <h4 class="mb-2">E-posta:</h4>
                        <p>info@blogy.com</p>
                    </div>

                    <div class="phone mt-4">
                        <i class="icon-phone"></i>
                        <h4 class="mb-2">Telefon:</h4>
                        <p>+90 212 123 45 67</p>
                    </div>

                </div>
            </div>

            <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                <form method="post" asp-action="SendMessage" asp-controller="Contact">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Adınız Soyadınız">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <input type="email" class="form-control" asp-for="Email" placeholder="E-posta Adresiniz">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Konu">
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="Mesajınız..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <input type="submit" value="Mesaj Gönder" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> ```


