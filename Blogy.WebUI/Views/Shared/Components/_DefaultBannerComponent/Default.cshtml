@model List<ResultBlogDto>
@*
    _DefaultBannerComponent
*@
<section class="section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout">
            @if (Model != null && Model.Any())
            {
                var blogs = Model.Take(5).ToList();

                <!-- Sol Kolon - 2 Blog -->
                <div class="col-md-4">
                    @if (blogs.Count > 0)
                    {
                        var blog1 = blogs[0];
                        <a href="@Url.Action("BlogDetail", "Blog", new { id = blog1.Id })" class="h-entry mb-30 v-height gradient">
                            <div class="featured-img" style="background-image: url('@blog1.CoverImage');"></div>
                            <div class="text">
                                <span class="date">@blog1.CreatedDate.ToString("MMM dd, yyyy")</span>
                                <h2>@blog1.Title</h2>
                            </div>
                        </a>
                    }

                    @if (blogs.Count > 1)
                    {
                        var blog2 = blogs[1];
                        <a href="@Url.Action("BlogDetail", "Blog", new { id = blog2.Id })" class="h-entry v-height gradient">
                            <div class="featured-img" style="background-image: url('@blog2.CoverImage');"></div>
                            <div class="text">
                                <span class="date">@blog2.CreatedDate.ToString("MMM dd, yyyy")</span>
                                <h2>@blog2.Title</h2>
                            </div>
                        </a>
                    }
                </div>

                <!-- Orta Kolon - 1 Büyük Blog -->
                <div class="col-md-4">
                    @if (blogs.Count > 2)
                    {
                        var blog3 = blogs[2];
                        <a href="@Url.Action("BlogDetail", "Blog", new { id = blog3.Id })" class="h-entry img-5 h-100 gradient">
                            <div class="featured-img" style="background-image: url('@blog3.CoverImage');"></div>
                            <div class="text">
                                <span class="date">@blog3.CreatedDate.ToString("MMM dd, yyyy")</span>
                                <h2>@blog3.Title</h2>
                            </div>
                        </a>
                    }
                </div>

                <!-- Sağ Kolon - 2 Blog -->
                <div class="col-md-4">
                    @if (blogs.Count > 3)
                    {
                        var blog4 = blogs[3];
                        <a href="@Url.Action("BlogDetail", "Blog", new { id = blog4.Id })" class="h-entry mb-30 v-height gradient">
                            <div class="featured-img" style="background-image: url('@blog4.CoverImage');"></div>
                            <div class="text">
                                <span class="date">@blog4.CreatedDate.ToString("MMM dd, yyyy")</span>
                                <h2>@blog4.Title</h2>
                            </div>
                        </a>
                    }

                    @if (blogs.Count > 4)
                    {
                        var blog5 = blogs[4];
                        <a href="@Url.Action("BlogDetail", "Blog", new { id = blog5.Id })" class="h-entry v-height gradient">
                            <div class="featured-img" style="background-image: url('@blog5.CoverImage');"></div>
                            <div class="text">
                                <span class="date">@blog5.CreatedDate.ToString("MMM dd, yyyy")</span>
                                <h2>@blog5.Title</h2>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <h4>Henüz blog yazısı bulunmamaktadır.</h4>
                        <p>Yeni blog yazıları eklendiğinde burada görüntülenecektir.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* Gradient overlay için ek stiller */
    .h-entry.gradient {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .h-entry.gradient:hover {
            transform: translateY(-5px);
        }

    .h-entry .featured-img {
        transition: transform 0.3s ease;
    }

    .h-entry:hover .featured-img {
        transform: scale(1.05);
    }

    .h-entry .text h2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.4;
    }

    @@media (max-width: 768px) {
        .retro-layout .col-md-4

    {
        margin-bottom: 30px;
    }

    .h-entry.v-height {
        min-height: 300px;
    }

    .h-entry.img-5.h-100 {
        min-height: 400px;
    }

    }
</style>