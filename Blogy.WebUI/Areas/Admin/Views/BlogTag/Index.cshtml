@model List<ResultBlogTagDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white rounded-3 p-3 me-3">
                            <i class="fas fa-tags fa-2x"></i>
                        </div>
                        <div>
                            <h2 class="mb-1 fw-bold">Blog Tag Yönetimi</h2>
                            <p class="text-muted mb-0">Blog ve etiket eşleştirmelerini yönetin</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <a asp-action="CreateBlogTag" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-plus me-2"></i>Yeni Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted small mb-1">Toplam Eşleştirme</p>
                            <h3 class="fw-bold mb-0">@Model.Count</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-link fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted small mb-1">Aktif Bloglar</p>
                            <h3 class="fw-bold mb-0">@Model.Select(x => x.BlogId).Distinct().Count()</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-file-alt fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted small mb-1">Aktif Etiketler</p>
                            <h3 class="fw-bold mb-0">@Model.Select(x => x.TagId).Distinct().Count()</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                            <i class="fas fa-tag fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <tr>
                            <th class="text-white py-3 px-4">ID</th>
                            <th class="text-white py-3 px-4">Blog</th>
                            <th class="text-white py-3 px-4">Blog ID</th>
                            <th class="text-white py-3 px-4">Etiket</th>
                            <th class="text-white py-3 px-4">Etiket ID</th>
                            <th class="text-white py-3 px-4 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="border-bottom">
                                    <td class="px-4 py-3">
                                        <span class="badge bg-secondary rounded-pill">#@item.Id</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-file-alt text-primary me-2"></i>
                                            <span class="fw-medium">Blog @item.Blog.Title</span>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="badge bg-info text-dark">@item.BlogId</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">
                                            <i class="fas fa-tag me-1"></i>Tag @item.Tag.Name
                                        </span>
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="badge bg-success">@item.TagId</span>
                                    </td>
                                    <td class="px-4 py-3 text-end">
                                        <a asp-action="UpdateBlogTag" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary me-2" title="Düzenle">
                                            <i class="fas fa-edit">Düzenle</i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="confirmDelete(@item.Id)" title="Sil">
                                            <i class="fas fa-trash">Sil</i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <p class="text-muted mb-0">Henüz kayıt bulunmamaktadır.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" asp-action="DeleteBlogTag" style="display: none;">
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Styles {
    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.01);
            transition: all 0.2s ease;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
            }

        .btn {
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
            }

        .table thead th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            color: white !important;
            border: none;
        }
    </style>
}

@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu işlem geri alınamaz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteId').value = id;
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>
}

