@model UpdateBlogTagDto
@{
    ViewData["Title"] = "UpdateBlogTag";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header Card -->
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white rounded-3 p-3 me-3">
                                <i class="fas fa-edit fa-2x"></i>
                            </div>
                            <div>
                                <h2 class="mb-1 fw-bold">Blog Tag Düzenle</h2>
                                <p class="text-muted mb-0">Eşleştirmeyi güncelleyin</p>
                            </div>
                        </div>
                        <div>
                            <span class="badge bg-primary bg-opacity-25 text-primary fs-6 px-3 py-2">
                                <i class="fas fa-hashtag me-1"></i>ID: @Model.Id
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-action="UpdateBlogTag" method="post" id="updateForm">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Current Info -->
                        <div class="alert alert-light border shadow-sm mb-4" role="alert">
                            <h6 class="alert-heading fw-bold mb-3">
                                <i class="fas fa-info-circle text-primary me-2"></i>Mevcut Bilgiler
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <i class="fas fa-file-alt text-primary me-2"></i>
                                        <strong>Blog ID:</strong>
                                        <span class="badge bg-info">@Model.BlogId</span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-0">
                                        <i class="fas fa-tag text-success me-2"></i>
                                        <strong>Tag ID:</strong>
                                        <span class="badge bg-success">@Model.TagId</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BlogId" class="form-label fw-semibold">
                                <i class="fas fa-file-alt text-primary me-2"></i>Blog Seçin
                            </label>

                            <select asp-for="BlogId"
                                    class="form-select form-select-lg shadow-sm"
                                    asp-items="@((List<SelectListItem>)ViewBag.Blogs)">
                                <option value="">Blog seçiniz...</option>
                            </select>

                            <span asp-validation-for="BlogId" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Etiket eklemek istediğiniz blogu seçin
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TagId" class="form-label fw-semibold">
                                <i class="fas fa-tag text-success me-2"></i>Etiket Seçin
                            </label>

                            <select asp-for="TagId"
                                    class="form-select form-select-lg shadow-sm"
                                    asp-items="@((List<SelectListItem>)ViewBag.Tags)">
                                <option value="">Etiket seçiniz...</option>
                            </select>

                            <span asp-validation-for="TagId" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Blog için uygun etiketi seçin
                            </div>
                        </div>

                        <!-- Warning Box -->
                        <div class="alert alert-warning border-0 shadow-sm" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-1">Dikkat!</h6>
                                    <p class="mb-0 small">Bu eşleştirmeyi değiştirdiğinizde, blog ve etiket arasındaki ilişki güncellenecektir. Bu işlem geri alınamaz.</p>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg flex-fill shadow-sm">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg flex-fill shadow-sm">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Timeline / History (Optional) -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-gradient text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-history me-2"></i>Düzenleme Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">Kayıt ID</small>
                            <p class="mb-0 fw-bold">#@Model.Id</p>
                        </div>
                        <div class="text-center">
                            <small class="text-muted">Blog ID</small>
                            <p class="mb-0 fw-bold">@Model.BlogId</p>
                        </div>
                        <div class="text-end">
                            <small class="text-muted">Tag ID</small>
                            <p class="mb-0 fw-bold">@Model.TagId</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .form-select:focus,
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
            }

        .btn {
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
            }

        .form-select,
        .form-control {
            border-radius: 0.5rem;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .form-select:hover,
            .form-control:hover {
                border-color: #667eea;
            }

        .alert {
            border-radius: 0.75rem;
        }

        .badge {
            padding: 0.5rem 0.75rem;
            border-radius: 0.5rem;
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Tek bir Listener ile tüm süreci yönetiyoruz
        document.getElementById('updateForm').addEventListener('submit', function(e) {
            // 1. Formun otomatik gönderilmesini her durumda durdur
            e.preventDefault();

            const blogId = document.querySelector('select[name="BlogId"]').value;
            const tagId = document.querySelector('select[name="TagId"]').value;
            const form = this; // Form elementini değişkene al

            // 2. Doğrulama Kontrolü (Boş alan var mı?)
            if (!blogId || !tagId) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Eksik Bilgi',
                    text: 'Lütfen blog ve etiket seçimini yapınız!',
                    confirmButtonColor: '#667eea'
                });
                return; // Kodun geri kalanını çalıştırma
            }

            // 3. Onay Penceresi
            Swal.fire({
                title: 'Güncellemek istediğinizden emin misiniz?',
                text: "Blog-Tag eşleştirmesi güncellenecektir.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#667eea',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Güncelle!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // 4. Onay verildiyse formu manuel olarak gönder
                    form.submit();
                }
            });
        });

        // Backend'den gelen Başarılı mesajı (Varsa çalışır)
        @if (TempData["Success"] != null)
        {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı!',
                        text: '@TempData["Success"]',
                        confirmButtonColor: '#28a745'
                    });
                    </text>
        }
    </script>
}

