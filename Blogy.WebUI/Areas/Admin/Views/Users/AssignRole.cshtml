@model List<AssignRoleDto>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Rol Atama Sayfası</h3>
<h4>@ViewBag.fullName kullanıcısına rol atama</h4>
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input class="form-check-input" type="checkbox" asp-for="@Model[i].RoleExists" />
            <label class="form-check-label">
                @Model[i].RoleName
            </label>
        </div>
    }
    <br/>
    <button class="btn btn-success">Rolleri Kaydet</button>
</form>

