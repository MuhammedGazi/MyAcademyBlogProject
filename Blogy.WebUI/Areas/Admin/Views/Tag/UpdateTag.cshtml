@model UpdateTagDto
@{
    ViewData["Title"] = "UpdateTag";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Animated Header Card -->
            <div class="card border-0 shadow-lg mb-4 animate__animated animate__fadeInDown">
                <div class="card-body bg-gradient-primary text-white rounded-3 p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-25 rounded-circle p-4 me-4">
                                <i class="fas fa-edit fa-3x"></i>
                            </div>
                            <div>
                                <h1 class="mb-2 fw-bold display-6">✏️ Etiket Düzenle</h1>
                                <p class="mb-0 opacity-75 fs-5">Etiket bilgilerini güncelleyin</p>
                            </div>
                        </div>
                        <div class="text-end">
                            <div class="bg-white bg-opacity-25 rounded-3 px-3 py-2">
                                <small class="d-block opacity-75">Etiket ID</small>
                                <h3 class="mb-0 fw-bold">#@Model.Id</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline Card -->
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm card-hover h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-info bg-opacity-10 rounded-3 p-3 me-3">
                                    <i class="fas fa-calendar-plus fa-2x text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm card-hover h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-warning bg-opacity-10 rounded-3 p-3 me-3">
                                    <i class="fas fa-clock fa-2x text-warning"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Current Value Card -->
            <div class="card border-0 shadow-sm mb-4 animate__animated animate__fadeInUp">
                <div class="card-header bg-light border-0">
                    <h6 class="mb-0 fw-bold">
                        <i class="fas fa-history text-primary me-2"></i>Mevcut Etiket Değeri
                    </h6>
                </div>
                <div class="card-body text-center p-4 bg-gradient-light">
                    <span class="badge bg-primary badge-preview-large">
                        <i class="fas fa-tag me-2"></i>@Model.Name
                    </span>
                </div>
            </div>

            <!-- Main Form Card -->
            <div class="card border-0 shadow-lg animate__animated animate__fadeInUp">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="fas fa-pencil-alt fa-2x text-primary"></i>
                        </div>
                        <div>
                            <h4 class="mb-1 fw-bold">Yeni Değer</h4>
                            <p class="text-muted mb-0 small">Etiket adını güncelleyin</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-bold fs-5">
                            <i class="fas fa-tag text-primary me-2"></i>Etiket Adı
                            <span class="text-danger">*</span>
                        </label>
                        <div class="input-group input-group-lg shadow-sm">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-keyboard text-muted"></i>
                            </span>
                            <input asp-for="Name"
                                   class="form-control border-start-0 border-2"
                                   placeholder="Yeni etiket adı..."
                                   autocomplete="off"
                                   id="tagNameInput"
                                   value="@Model.Name" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>

                        <div class="mt-3">
                            <div class="d-flex align-items-center justify-content-between bg-light rounded-3 p-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-info-circle text-info me-2"></i>
                                    <small class="text-muted">Karakter sayısı:</small>
                                </div>
                                <span class="badge bg-primary badge-glow" id="charCount">@Model.Name.Length / 50</span>
                            </div>
                        </div>
                    </div>

                    <!-- New Tag Preview -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="fas fa-eye text-success me-2"></i>Yeni Önizleme
                        </label>
                        <div class="bg-light rounded-3 p-4 text-center position-relative">
                            <div class="comparison-arrow">
                                <i class="fas fa-arrow-down fa-2x text-success"></i>
                            </div>
                            <div id="tagPreview">
                                <span class="badge bg-gradient-success badge-preview px-4 py-3 fs-5">
                                    <i class="fas fa-tag me-2"></i>
                                    <span id="previewText">@Model.Name</span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Change Warning -->
                    <div class="alert alert-warning border-0 shadow-sm rounded-3" role="alert">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-exclamation-triangle fa-2x"></i>
                            </div>
                            <div>
                                <h6 class="alert-heading mb-2">
                                    <i class="fas fa-shield-alt me-1"></i>Güncelleme Uyarısı
                                </h6>
                                <p class="mb-2 small">Bu etiketi güncellediğinizde:</p>
                                <ul class="mb-0 small">
                                    <li>Bu etiketi kullanan tüm blog yazılarında değişiklik yapılacaktır</li>
                                    <li>Eski etiket adı sistemde görünmeyecektir</li>
                                    <li>Bu işlem geri alınamaz</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 mt-4">
                        <button type="button" onclick="submitForm()" class="btn btn-primary btn-lg flex-fill shadow-sm pulse-btn">
                            <i class="fas fa-save me-2"></i>Güncelle ve Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg flex-fill shadow-sm">
                            <i class="fas fa-times-circle me-2"></i>İptal
                        </a>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card border-0 shadow-sm mt-4 animate__animated animate__fadeInUp">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-chart-bar text-info me-2"></i>Etiket İstatistikleri
                    </h6>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="stat-box">
                                <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                                <h4 class="fw-bold mb-0">-</h4>
                                <small class="text-muted">Kullanım</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-box">
                                <i class="fas fa-eye fa-2x text-success mb-2"></i>
                                <h4 class="fw-bold mb-0">-</h4>
                                <small class="text-muted">Görüntüleme</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-box">
                                <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                <h4 class="fw-bold mb-0">-</h4>
                                <small class="text-muted">Popülerlik</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Form -->
<form id="updateForm" asp-action="UpdateTag" method="post" style="display: none;">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" id="hiddenName" />
</form>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }

        .bg-gradient-light {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .card-hover:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.15) !important;
            }

        .pulse-btn {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.02);
        }

        }

        .badge-glow {
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            animation: glow 2s ease-in-out infinite;
        }

        @@keyframes glow {
            0%, 100%

        {
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
        }

        50% {
            box-shadow: 0 0 25px rgba(0,123,255,0.5);
        }

        }

        .badge-preview {
            font-size: 1.5rem !important;
            padding: 1rem 2rem !important;
            transition: all 0.3s ease;
        }

        .badge-preview-large {
            font-size: 2rem !important;
            padding: 1.5rem 2.5rem !important;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
        }

        .comparison-arrow {
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 100%

        {
            transform: translateX(-50%) translateY(0);
        }

        50% {
            transform: translateX(-50%) translateY(10px);
        }

        }

        .stat-box {
            padding: 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .stat-box:hover {
                background-color: #f8f9fa;
                transform: scale(1.05);
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const tagInput = document.getElementById('tagNameInput');
        const charCountBadge = document.getElementById('charCount');
        const previewText = document.getElementById('previewText');
        const originalValue = '@Model.Name';

        // Real-time preview and character count
        tagInput.addEventListener('input', function() {
            const value = this.value;
            const length = value.length;

            // Update character count
            charCountBadge.textContent = length + ' / 50';
            charCountBadge.className = 'badge badge-glow ' +
                (length > 50 ? 'bg-danger' : length > 40 ? 'bg-warning' : 'bg-primary');

            // Update preview
            previewText.textContent = value || 'Etiket Adı';

            // Animate preview
            document.querySelector('.badge-preview').classList.add('animate__animated', 'animate__pulse');
            setTimeout(() => {
                document.querySelector('.badge-preview').classList.remove('animate__animated', 'animate__pulse');
            }, 500);
        });

        // Submit with confirmation
        function submitForm() {
            const tagName = tagInput.value.trim();

            if (!tagName) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Dikkat!',
                    text: 'Lütfen bir etiket adı giriniz!',
                    confirmButtonColor: '#ffc107'
                });
                return;
            }

            if (tagName.length > 50) {
                Swal.fire({
                    icon: 'error',
                    title: 'Hata!',
                    text: 'Etiket adı en fazla 50 karakter olabilir!',
                    confirmButtonColor: '#dc3545'
                });
                return;
            }

            if (tagName === originalValue) {
                Swal.fire({
                    icon: 'info',
                    title: 'Bilgi',
                    text: 'Etiket adında bir değişiklik yapmadınız!',
                    confirmButtonColor: '#17a2b8'
                });
                return;
            }

            Swal.fire({
                title: 'Etiket Güncelleniyor...',
                html: `
                    <div class="text-start">
                        <p><strong>Eski değer:</strong> <span class="badge bg-secondary">${originalValue}</span></p>
                        <p><strong>Yeni değer:</strong> <span class="badge bg-primary">${tagName}</span></p>
                        <hr>
                        <p class="small text-muted">Bu değişikliği onaylıyor musunuz?</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#667eea',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-check me-2"></i>Evet, Güncelle!',
                cancelButtonText: '<i class="fas fa-times me-2"></i>İptal',
                customClass: {
                    confirmButton: 'btn btn-primary btn-lg',
                    cancelButton: 'btn btn-secondary btn-lg'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('hiddenName').value = tagName;
                    document.getElementById('updateForm').submit();
                }
            });
        }

        // Enter key submit
        tagInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                submitForm();
            }
        });

        // Warn on leave if changed
        let hasChanged = false;
        tagInput.addEventListener('input', function() {
            hasChanged = this.value.trim() !== originalValue;
        });

        window.addEventListener('beforeunload', function(e) {
            if (hasChanged) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    </script>
}

