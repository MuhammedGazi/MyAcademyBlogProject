@model CreateCommentDto
@{
    ViewData["Title"] = "CreateComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Kategori Oluştur</h1>

<form method="post">
	<div class="form-group">
		<label>Blog Adı</label>
		<select type="text" asp-for="BlogId" class="form-control" asp-items="@ViewBag.blogs"></select>
		<span asp-validation-for="BlogId" class="text-danger"></span>
		<br />

		<label>Yorum</label>
		<textarea type="text" asp-for="Content" class="form-control" rows="5"></textarea>
		<span asp-validation-for="Content" class="text-danger"></span>
		<br />
	</div>
	<button type="submit" class="btn btn-primary">Oluştur</button>
</form>

