@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Writer/Blog/Index" class="text-decoration-none">
                        <i class="fas fa-home me-1"></i>Bloglar
                    </a>
                </li>
                <li class="breadcrumb-item active">Yeni Blog Ekle</li>
            </ol>
        </nav>
        <h2 class="fw-bold text-dark mb-1">
            <i class="fas fa-plus-circle text-primary me-2"></i>
            Yeni Blog Yazısı Oluştur
        </h2>
        <p class="text-muted mb-0">Yeni bir blog yazısı ekleyin ve yayınlayın</p>
    </div>

    <div class="row">
        <!-- Form Section -->
        <div class="col-lg-8 mb-4">
            <form method="post" id="blogForm">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="fas fa-edit me-2 text-primary"></i>Temel Bilgiler
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold text-dark">
                                <i class="fas fa-heading text-primary me-2"></i>Blog Başlığı
                            </label>
                            <input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Etkileyici bir başlık girin..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold text-dark">
                                <i class="fas fa-align-left text-primary me-2"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="8" placeholder="Blog içeriğinizi buraya yazın..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <small class="text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                En az 50 karakter yazmanız önerilir
                            </small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label fw-semibold text-dark">
                                <i class="fas fa-folder text-primary me-2"></i>Kategori
                            </label>
                            <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.categories">
                                <option value="">Kategori Seçiniz</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold text-dark">
                            <i class="fas fa-images me-2 text-primary"></i>Görseller
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label asp-for="CoverImage" class="form-label fw-semibold text-dark">
                                <i class="fas fa-image text-primary me-2"></i>Kapak Resmi URL
                            </label>
                            <input type="text" asp-for="CoverImage" class="form-control form-control-lg" placeholder="https://example.com/image.jpg" id="coverImageInput" />
                            <span asp-validation-for="CoverImage" class="text-danger small"></span>

                            <!-- Cover Image Preview -->
                            <div class="mt-3" id="coverPreviewContainer" style="display: none;">
                                <p class="text-muted small mb-2">Önizleme:</p>
                                <img id="coverPreview" src="" alt="Cover Preview" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BlogImage1" class="form-label fw-semibold text-dark">
                                <i class="fas fa-image text-primary me-2"></i>Blog Resmi 1
                            </label>
                            <input type="text" asp-for="BlogImage1" class="form-control" placeholder="https://example.com/image1.jpg" id="image1Input" />
                            <span asp-validation-for="BlogImage1" class="text-danger small"></span>

                            <div class="mt-2" id="image1PreviewContainer" style="display: none;">
                                <img id="image1Preview" src="" alt="Image 1 Preview" class="img-thumbnail" style="max-height: 150px;">
                            </div>
                        </div>

                        <div class="mb-0">
                            <label asp-for="BlogImage2" class="form-label fw-semibold text-dark">
                                <i class="fas fa-image text-primary me-2"></i>Blog Resmi 2
                            </label>
                            <input type="text" asp-for="BlogImage2" class="form-control" placeholder="https://example.com/image2.jpg" id="image2Input" />
                            <span asp-validation-for="BlogImage2" class="text-danger small"></span>

                            <div class="mt-2" id="image2PreviewContainer" style="display: none;">
                                <img id="image2Preview" src="" alt="Image 2 Preview" class="img-thumbnail" style="max-height: 150px;">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-save me-2"></i>Kaydet ve Yayınla
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="saveDraft()">
                        <i class="fas fa-file-alt me-2"></i>Taslak Olarak Kaydet
                    </button>
                    <a href="/Writer/Blog/Index" class="btn btn-outline-danger btn-lg px-4">
                        <i class="fas fa-times me-2"></i>İptal
                    </a>
                </div>
            </form>
        </div>

        <!-- Info & Preview Section -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4 sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="fas fa-lightbulb me-2"></i>Yazı Yazma İpuçları
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="fw-semibold text-dark mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>İyi Başlık
                        </h6>
                        <p class="text-muted small mb-0">Dikkat çekici ve açıklayıcı başlıklar kullanın (40-60 karakter)</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="fw-semibold text-dark mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>Kaliteli İçerik
                        </h6>
                        <p class="text-muted small mb-0">En az 300 kelimelik özgün içerik oluşturun</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <h6 class="fw-semibold text-dark mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>Görseller
                        </h6>
                        <p class="text-muted small mb-0">Yüksek kaliteli ve ilgili görseller ekleyin</p>
                    </div>
                    <hr>
                    <div>
                        <h6 class="fw-semibold text-dark mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>SEO Uyumlu
                        </h6>
                        <p class="text-muted small mb-0">Anahtar kelimeleri doğal şekilde kullanın</p>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm bg-gradient-info text-white">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-chart-line me-2"></i>İçerik İstatistikleri
                    </h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Karakter Sayısı:</span>
                        <strong id="charCount">0</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Kelime Sayısı:</span>
                        <strong id="wordCount">0</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Okuma Süresi:</span>
                        <strong id="readTime">0 dk</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #209cff 0%, #68e0cf 100%);
    }

    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

    .btn {
        transition: all 0.3s ease;
    }

    .img-thumbnail, .img-fluid {
        transition: transform 0.3s ease;
    }

        .img-thumbnail:hover, .img-fluid:hover {
            transform: scale(1.05);
        }
</style>

<script>
    // Image Preview Functions
    function setupImagePreview(inputId, previewId, containerId) {
        const input = document.getElementById(inputId);
        const preview = document.getElementById(previewId);
        const container = document.getElementById(containerId);

        input.addEventListener('input', function() {
            const url = this.value;
            if (url) {
                preview.src = url;
                container.style.display = 'block';
                preview.onerror = function() {
                    container.style.display = 'none';
                };
            } else {
                container.style.display = 'none';
            }
        });
    }

    setupImagePreview('coverImageInput', 'coverPreview', 'coverPreviewContainer');
    setupImagePreview('image1Input', 'image1Preview', 'image1PreviewContainer');
    setupImagePreview('image2Input', 'image2Preview', 'image2PreviewContainer');

    // Content Statistics
    const descriptionTextarea = document.querySelector('textarea[name="Description"]');
    const charCount = document.getElementById('charCount');
    const wordCount = document.getElementById('wordCount');
    const readTime = document.getElementById('readTime');

    descriptionTextarea.addEventListener('input', function() {
        const text = this.value;
        const chars = text.length;
        const words = text.trim().split(/\s+/).filter(word => word.length > 0).length;
        const minutes = Math.ceil(words / 200); // Average reading speed

        charCount.textContent = chars;
        wordCount.textContent = words;
        readTime.textContent = minutes + ' dk';
    });

    // Save Draft Function
    function saveDraft() {
        Swal.fire({
            title: 'Taslak Kaydediliyor',
            text: 'Blog yazınız taslak olarak kaydedilecek',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#667eea',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Kaydet',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                // Add draft save logic here
                Swal.fire('Kaydedildi!', 'Blog yazınız taslak olarak kaydedildi.', 'success');
            }
        });
    }

    // Form Validation Enhancement
    document.getElementById('blogForm').addEventListener('submit', function(e) {
        const title = document.querySelector('input[name="Title"]').value;
        const description = descriptionTextarea.value;

        if (title.length < 10) {
            e.preventDefault();
            Swal.fire('Dikkat!', 'Başlık en az 10 karakter olmalıdır.', 'warning');
            return false;
        }

        if (description.length < 50) {
            e.preventDefault();
            Swal.fire('Dikkat!', 'Açıklama en az 50 karakter olmalıdır.', 'warning');
            return false;
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

